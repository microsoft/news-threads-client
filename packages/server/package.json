{
	"name": "@newsthreads/server",
	"version": "0.0.1",
	"license": "MIT",
	"private": true,
	"scripts": {
		"slurp": "node ../scripts/lib/index.js",
		"clean": "shx rm -rf ./build && shx rm -rf ./dist",
		"start:wp": "webpack -w",
		"start:functions": "func start",
		"start": "run-p start:wp start:functions",
		"build": "webpack",
		"bundle": "yarn slurp zip deploy.zip config dist graphql host.json package.json",
		"deploy": "az functionapp deployment source config-zip --subscription $NT_SUBSCRIPTION -g $NT_GROUP -n $NT_API_NAME --src ./deploy.zip",
		"deploy:server": "yarn deploy"
	},
	"dependencies": {
		"@newsthreads/schema": "workspace:packages/schema",
		"apollo-server-azure-functions": "^3.1.1",
		"config": "^3.3.6",
		"dataloader": "^2.0.0",
		"debug": "^4.3.2",
		"graphql": "^15.5.1",
		"jsonwebtoken": "^8.5.1",
		"jwks-rsa": "^1.10.1",
		"lodash": "^4.17.21",
		"mongodb": "^3.6.2",
		"supports-color": "^9.0.2"
	},
	"devDependencies": {
		"@azure/functions": "^1.2.3",
		"@types/config": "^0.0.39",
		"@types/debug": "^4.1.7",
		"@types/lodash": "^4.14.171",
		"@types/mongodb": "^3.5.28",
		"@types/node": "^14.11.10",
		"azure-functions-core-tools": "^3.0.0",
		"config-webpack": "^1.0.5",
		"graphql-tag": "^2.12.5",
		"npm-run-all": "^4.1.5",
		"pnp-webpack-plugin": "^1.7.0",
		"ts-loader": "^8.0.5",
		"typescript": "^4.0.3",
		"webpack": "^4.44.2",
		"webpack-cli": "^3.3.12"
	}
}
