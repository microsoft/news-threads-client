{
	"name": "@newsthreads/server",
	"version": "0.0.1",
	"license": "MIT",
	"private": true,
	"scripts": {
		"slurp": "node ../scripts/lib/index.js",
		"clean": "essex clean build dist",
		"start:tsc": "tsc -w --preserveWatchOutput",
		"start:wp": "webpack -w",
		"start:functions": "func start",
		"start": "run-p start:wp start:functions",
		"build:tsc": "tsc -p .",
		"build:wp": "webpack",
		"build": "run-s build:tsc build:wp",
		"bundle": "pnpm slurp zip deploy.zip config dist graphql host.json package.json",
		"deploy": "cross-env-shell az functionapp deployment source config-zip --subscription $NT_SUBSCRIPTION -g $NT_GROUP -n $NT_API_NAME --src ./deploy.zip"
	},
	"dependencies": {
		"@newsthreads/schema": "^0.0.1",
		"apollo-server-azure-functions": "^2.18.2",
		"config": "^3.3.1",
		"dataloader": "^2.0.0",
		"debug": "^4.2.0",
		"graphql": "^14.7.0",
		"jsonwebtoken": "^8.5.1",
		"jwks-rsa": "^1.10.1",
		"lodash": "^4.17.20",
		"mongodb": "^3.6.2"
	},
	"devDependencies": {
		"@azure/functions": "^1.2.2",
		"@types/config": "^0.0.36",
		"@types/debug": "^4.1.5",
		"@types/lodash": "^4.14.162",
		"@types/mongodb": "^3.5.28",
		"@types/node": "^14.11.10",
		"graphql-tag": "^2.11.0",
		"ts-loader": "^8.0.5",
		"webpack": "^4.44.2",
		"webpack-cli": "^3.3.12"
	}
